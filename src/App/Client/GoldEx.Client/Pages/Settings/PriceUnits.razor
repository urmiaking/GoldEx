@inherits GoldExComponentBase

@attribute [Route(ClientRoutes.Settings.PriceUnits)]
@attribute [Authorize(Roles = $"{BuiltinRoles.Administrators}, {BuiltinRoles.Owners}")]

<PageTitle>مدیریت واحدهای ارزی</PageTitle>

<div class="d-flex align-center justify-space-between">
    <MudText Typo="Typo.h6" GutterBottom="true">مدیریت واحدهای ارزی</MudText>
    
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudFab Color="Color.Success" EndIcon="@Icons.Material.Filled.Add" Label="افزودن واحد ارزی جدید" Size="Size.Small" OnClick="_ => OnCreate()" />
    </MudHidden>

    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudFab Color="Color.Success" EndIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="_ => OnCreate()" />
    </MudHidden>
</div>
<MudDivider Class="my-2" />

<MudTable T="PriceUnitVm" Hover="true" FixedHeader="true" Dense="true" Items="_priceUnits"
          SelectOnRowClick="false" Breakpoint="Breakpoint.Xs" Elevation="3" Height="350px">
    <HeaderContent>
        <MudTh>ردیف</MudTh>
        <MudTh>عنوان</MudTh>
        <MudTh></MudTh>
        <MudTh>عملیات</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ردیف">@context.Index</MudTd>
        <MudTd DataLabel="عنوان">
            @context.Title
            @if (context.IsDefault)
            {
                <MudChip T="string" Color="Color.Success" Size="Size.Small" Class="ml-2">پیش فرض</MudChip>
            }
        </MudTd>
        <MudTd>
            @if (context.HasIcon)
            {
                <span class="mr-2">
                    <MudAvatar Size="Size.Small">
                        <MudImage Src="@(ApiUrls.Icons.Get(IconType.PriceUnit, context.Id))" Alt="img" />
                    </MudAvatar>
                </span>
            }
        </MudTd>
        <MudTd DataLabel="عملیات">
            <div class="d-flex gap-2">
                <MudTooltip Text="ویرایش">
                    <MudFab Color="Color.Primary" EndIcon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="_ => OnEdit(context)" />
                </MudTooltip>
                @if (context.IsActive)
                {
                    <MudTooltip Text="غیرفعال سازی">
                        <MudFab Color="Color.Error" EndIcon="@Icons.Material.Filled.Lock" Size="Size.Small" OnClick="_ => OnStatusChanged(context)" />
                    </MudTooltip>
                }
                else
                {
                    <MudTooltip Text="فعال سازی">
                        <MudFab Color="Color.Success" EndIcon="@Icons.Material.Filled.LockOpen" Size="Size.Small" OnClick="_ => OnStatusChanged(context)" />
                    </MudTooltip>
                }
                @if (context is { IsDefault: false, IsActive: true })
                {
                    <MudTooltip Text="تنظیم به عنوان ارز پیش فرض">
                        <MudFab Color="Color.Info" EndIcon="@Icons.Material.Filled.Check" Size="Size.Small" OnClick="_ => OnSetAsDefault(context.Id)" />
                    </MudTooltip>
                }
            </div>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>هیچ واحد ارزی وجود ندارد</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>در حال بارگذاری</MudText>
    </LoadingContent>
</MudTable>