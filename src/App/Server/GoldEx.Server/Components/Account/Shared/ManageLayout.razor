@inherits LayoutComponentBase
@layout MainLayout

<MudContainer MaxWidth="MaxWidth.Large">
    <MudBreadcrumbs Class="pr-0" Items="_breadcrumbs">
        <SeparatorTemplate>
            <MudIcon Icon="@Icons.Material.Filled.ArrowForwardIos" Size="Size.Small" />
        </SeparatorTemplate>
    </MudBreadcrumbs>

    <MudGrid>
        <MudItem md="3">
            <MudText Typo="Typo.h6" GutterBottom="true">تنظیمات حساب کاربری</MudText>
            <hr />
            <ManageNavMenu />
        </MudItem>
        <MudItem md="9">
            @Body
        </MudItem>
    </MudGrid>

</MudContainer>

@code
{
    private readonly List<BreadcrumbItem> _breadcrumbs =
    [
        new BreadcrumbItem("صفحه اصلی", href: ClientRoutes.Home.Index, icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("مدیریت حساب", href: ClientRoutes.Accounts.Manage.Index, icon: Icons.Material.Filled.ManageAccounts)
    ];
}
