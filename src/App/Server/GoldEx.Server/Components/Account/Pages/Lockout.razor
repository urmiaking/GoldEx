@attribute [Route(ClientRoutes.Accounts.Lockout)]
@layout EmptyBoxLayout

<PageTitle>حساب مسدود</PageTitle>


<MudStack AlignItems="AlignItems.Center">
    <MudItem>
        <MudImage Src="/assets/logo/logo512.png" Alt="Logo" Height="50" />
    </MudItem>
    <MudItem>
        <MudText Align="Align.Center" Typo="Typo.h3" GutterBottom="true">گلدکس</MudText>
    </MudItem>
    <MudItem>
        <MudText Align="Align.Center" Typo="Typo.h5" GutterBottom="true">حساب شما مسدود شده است</MudText>
    </MudItem>
    <MudItem>
        <MudText Align="Align.Center" Typo="Typo.body1">حساب شما به دلیل تلاش های ناموفق مکرر برای ورود مسدود شده است</MudText>
    </MudItem>
    <MudItem>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Login" Color="Color.Primary" Href="@ClientRoutes.Accounts.Login">ورود به سامانه</MudButton>
    </MudItem>
</MudStack>